---
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
export interface Props {
  title: string;
}

const { title, description = "Paguina web de Alejandro Fandos" } = Astro.props;

const seoTitle = title ? `${title} | Fan2Dev` : "Fan2Dev | Alejandro Fandos";
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/my-favicon.svg" />
    <link rel="canonical" href={Astro.url.href} />
    <meta name="description" content={description} />
    <meta property="og:title" content={seoTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="Fan2Dev" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="https://fan2dev.com/og-image.png" />
    <meta property="og:locale" content="es_ES" />
    <link
      href="/fonts/Font-Venacti-Regular.woff2"
      rel="preload"
      as="font"
      type="font/woff2"
      fetchpriority="high"
      crossorigin
    />
    <link
      href="/fonts/Font-Venacti-Bold.woff2"
      rel="preload"
      as="font"
      type="font/woff2"
      fetchpriority="high"
      crossorigin
    />
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();

      if (theme === "light") {
        document.documentElement.classList.remove("dark");
      } else {
        document.documentElement.classList.add("dark");
      }
      window.localStorage.setItem("theme", theme);
    </script>
    <title>{seoTitle}</title>
  </head>
  <body
    class="flex flex-col min-h-screen mt-5 overflow-hidden bg-gray-300 dark:bg-gray-600"
  >
    <div class="flex justify-end gap-2 pr-20 -mt-12 transition-colors">
      <div
        class="px-3 bg-gray-200 shadow-xl rounded-xl font-title dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-800"
      >
        <button id="accesibility-menu" class="flex flex-row gap-2 pt-8 pb-2 group">
          <p>â™¿</p>
          <span class="hidden group-hover:block">Proximamente</span>
        </button>
      </div>
      <div
        class="px-3 bg-gray-200 shadow-xl rounded-xl font-title dark:bg-gray-700 hover:bg-gray-400 dark:hover:bg-gray-800"
      >
        <button id="theme-toggle" class="pt-8 pb-2"></button>
      </div>
    </div>
    <Header />
    <main class="relative h-auto mx-20">
      <slot />
    </main>
    <Footer />
  </body>
  <script>
    const button = document.querySelector("#theme-toggle");
    button.innerHTML = document.documentElement.classList.contains("dark")
      ? "ðŸŒ™"
      : "ðŸŒž";
    button.addEventListener("click", () => {
      if (document.documentElement.classList.contains("dark")) {
        document.documentElement.classList.remove("dark");
        window.localStorage.setItem("theme", "light");
        button.innerHTML = "ðŸŒž";
      } else {
        document.documentElement.classList.add("dark");
        window.localStorage.setItem("theme", "dark");
        button.innerHTML = "ðŸŒ™";
      }
    });
  </script>
</html>

<style>
  @font-face {
    font-family: "Venacti Regular";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url("/fonts/Font-Venacti-Regular.woff2") format("woff2");
  }

  @font-face {
    font-family: "Venacti Bold";
    font-style: normal;
    font-weight: 400;
    font-display: swap;
    src: url("/fonts/Font-Venacti-Bold.woff2") format("woff2");
  }

  html,
  body {
    font-family: "Venacti Regular", system-ui, -apple-system, BlinkMacSystemFont,
      "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans",
      "Helvetica Neue", sans-serif;
  }
</style>
